using System;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {
            int totalSum = 0;
            for (int i = 0; i <= 999; i++){
                if (i % 3 == 0 || i % 5 == 0 )
                {
                    totalSum += i;
                }
            }
            Console.WriteLine(totalSum);
            Console.ReadLine();
        }
    }
 }
